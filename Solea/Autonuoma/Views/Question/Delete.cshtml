@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.QuestionListVM
@{
	ViewData["title"] = "Delete question";
}
<link rel="stylesheet" href="~/css/bootswatchTheme.css" />
<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<pantrast class="title">@ViewData["title"]</pantrast>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Likes)
	@Html.HiddenFor(m => m.Dislikes)
	@Html.HiddenFor(m => m.Id)

	<fieldset class="border rounded shadow p-2">
		<legend class="text-center">You sure you want to delete this question?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.fk_User)</dt>
			<dd>@Html.DisplayFor(m => m.fk_User)</dd>

			<dt>@Html.DisplayNameFor(m => m.Questions)</dt>
			<dd>@Html.DisplayFor(m => m.Questions)</dd>

			<dt>@Html.DisplayNameFor(m => m.Content)</dt>
			<dd>@Html.DisplayFor(m => m.Content)</dd>

		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="alert alert-warning text-center">
				<i class="fa-solid fa-circle-exclamation"></i> You can't delete this question because it's already used in answer section.
			</div>
		}
		else
		{
			<div class="container-fluid d-flex d-row justify-content-end">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Id})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Delete</button>
			</div>			
		}
	</fieldset>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back to list</a>
	</span>
</div>
