@model Org.Ktu.Isk.P175B602.Autonuoma.Models.User

@{
	ViewData["title"] = "User creator";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<pantrast class="title">@ViewData["title"]</pantrast>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	
	@Html.HiddenFor(m => m.Id)
	@Html.HiddenFor(m => m.Currency)


	<fieldset class="border rounded shadow p-2">
		<div class="form-group">

			<div>
			<atskls>@Html.LabelFor(m => m.Name, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter username" } })
			@Html.ValidationMessage("name"@*m => m.Name, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.Email, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "Enter email" } })
			<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			@Html.ValidationMessage("email"@*m => m.Email, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.Password, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password" } })
			@Html.ValidationMessage("password"@*m => m.Password, "", new { @class = "text-danger" }*@)
			</div>
			 
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button class="btn btn-warning"><i class="fa-solid fa-floppy-disk"></i> Save</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="http://localhost:5000/Question" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back to list</a>
	</span>
</div>